.the_header{
  margin: 20rpx 0 0 0;
}
.the_header text{
  display: block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
}
.the_header image{
  display: block;
  width: 102rpx;
  height: 102rpx;
  margin: 20rpx auto 0 auto;
}
.button1{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 700rpx;
}
.button1 button{
  border: 2px blueviolet solid;
  outline: none;
  padding: 0;
  border-radius: 50%;
  width: 242rpx;
  height: 242rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button1 button image{
  display: block;
  margin: 0 auto;
  border-radius: 50%;
  width: 242rpx;
  height: 242rpx;
}
.button1 button:active{
  width: 260rpx;
  height: 260rpx;
}
.button1 button:active image{
  width: 260rpx;
  height: 260rpx;
}
